    <script>
        let savedDesignId = null;

        // Atualizar preview em tempo real
        document.getElementById('color').addEventListener('change', updatePreview);
        document.getElementById('aroma').addEventListener('change', updatePreview);
        document.getElementById('container').addEventListener('change', updatePreview);
        document.getElementById('size').addEventListener('change', updatePreview);

        function updatePreview() {
            const color = document.getElementById('color').value;
            const aroma = document.getElementById('aroma').value;
            const container = document.getElementById('container').value;
            const size = document.getElementById('size').value;

            document.getElementById('jarPreview').style.background = color;
            document.getElementById('aromaSpec').textContent = aroma;
            document.getElementById('containerSpec').textContent = container;
            document.getElementById('sizeSpec').textContent = size;
            document.getElementById('jarLabel').textContent = aroma;
        }

        // Valida√ß√µes
        function validateEmail(email) {
            const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return re.test(email);
        }

        function validatePhone(phone) {
            const digits = phone.replace(/\D/g, '');
            return digits.length >= 10;
        }

        function showError(fieldId, show) {
            const field = document.getElementById(fieldId);
            const error = document.getElementById(fieldId + 'Error');
            
            if (show) {
                field.classList.add('error');
                error.classList.add('show');
            } else {
                field.classList.remove('error');
                error.classList.remove('show');
            }
        }

        // Salvar design
        async function saveDesign() {
            const userName = document.getElementById('userName').value.trim();
            const userPhone = document.getElementById('userPhone').value.trim();
            const userEmail = document.getElementById('userEmail').value.trim();

            let hasError = false;

            // Validar nome
            if (!userName) {
                showError('userName', true);
                hasError = true;
            } else {
                showError('userName', false);
            }

            // Validar telefone
            if (!validatePhone(userPhone)) {
                showError('userPhone', true);
                hasError = true;
            } else {
                showError('userPhone', false);
            }

            // Validar email
            if (!validateEmail(userEmail)) {
                showError('userEmail', true);
                hasError = true;
            } else {
                showError('userEmail', false);
            }

            if (hasError) {
                return;
            }

            if (!window.db) {
                alert('‚ö†Ô∏è Firebase n√£o configurado! Configure o Firebase no c√≥digo.');
                return;
            }

            // Mostrar loading
            document.getElementById('loading').classList.add('show');
            document.getElementById('saveBtn').disabled = true;

            try {
                const designData = {
                    userName,
                    userPhone,
                    userEmail,
                    color: document.getElementById('color').value,
                    colorName: document.getElementById('color').options[document.getElementById('color').selectedIndex].text,
                    aroma: document.getElementById('aroma').value,
                    container: document.getElementById('container').value,
                    size: document.getElementById('size').value,
                    createdAt: new Date().toISOString()
                };

                const docRef = await window.addDoc(window.collection(window.db, 'designs'), designData);
                savedDesignId = docRef.id;

                // Esconder loading
                document.getElementById('loading').classList.remove('show');
                
                // Mostrar sucesso
                document.getElementById('designId').textContent = savedDesignId;
                document.getElementById('successMessage').classList.add('show');
                
                // Habilitar bot√£o compartilhar
                document.getElementById('shareBtn').disabled = false;

                console.log('‚úÖ Design salvo com ID:', savedDesignId);
            } catch (error) {
                console.error('‚ùå Erro ao salvar:', error);
                document.getElementById('loading').classList.remove('show');
                document.getElementById('saveBtn').disabled = false;
                alert('‚ùå Erro ao salvar design: ' + error.message);
            }
        }

        // Compartilhar design
        function shareDesign() {
            if (!savedDesignId) {
                alert('‚ö†Ô∏è Salve o design primeiro!');
                return;
            }

            const designUrl = window.location.origin + window.location.pathname + '?design=' + savedDesignId;
            const userName = document.getElementById('userName').value;
            const aroma = document.getElementById('aroma').value;
            const colorName = document.getElementById('color').options[document.getElementById('color').selectedIndex].text;

            const subject = `Meu Design CandleVerse - ${aroma}`;
            const body = `Ol√°! üïØÔ∏è\n\nCriei uma vela personalizada no CandleVerse:\n\n‚ú® Aroma: ${aroma}\nüé® Cor: ${colorName}\nüë§ Criado por: ${userName}\n\nüîó Veja o design: ${designUrl}\n\nCriado com CandleVerse`;

            // Op√ß√£o 1: Email
            const mailtoUrl = `mailto:?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
            
            // Op√ß√£o 2: WhatsApp
            const whatsappText = `Ol√°! üïØÔ∏è Criei uma vela personalizada no CandleVerse!\n\n‚ú® ${aroma} | üé® ${colorName}\n\nüîó ${designUrl}`;
            const whatsappUrl = `https://wa.me/?text=${encodeURIComponent(whatsappText)}`;

            // Mostrar op√ß√µes
            if (confirm('üìß Clique OK para enviar por Email ou CANCELAR para WhatsApp')) {
                window.open(mailtoUrl, '_blank');
            } else {
                window.open(whatsappUrl, '_blank');
            }
        }

        // Resetar design
        function resetDesign() {
            if (confirm('üîÑ Tem certeza que deseja criar uma nova vela? As informa√ß√µes n√£o salvas ser√£o perdidas.')) {
                // Resetar selects
                document.getElementById('color').selectedIndex = 0;
                document.getElementById('aroma').selectedIndex = 0;
                document.getElementById('container').selectedIndex = 0;
                document.getElementById('size').selectedIndex = 0;

                // Resetar inputs
                document.getElementById('userName').value = '';
                document.getElementById('userPhone').value = '';
                document.getElementById('userEmail').value = '';

                // Limpar erros
                showError('userName', false);
                showError('userPhone', false);
                showError('userEmail', false);

                // Esconder mensagem de sucesso
                document.getElementById('successMessage').classList.remove('show');
                
                // Desabilitar bot√£o compartilhar
                document.getElementById('shareBtn').disabled = true;
                document.getElementById('saveBtn').disabled = false;

                // Resetar ID salvo
                savedDesignId = null;

                // Atualizar preview
                updatePreview();
            }
        }

        // Inicializar preview
        updatePreview();
    </script>
</body>
