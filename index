    <!-- Firebase SDK -->
    <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/12.4.0/firebase-app.js";

        // ========================================
        // FIREBASE_CONFIG - CONFIGURE AQUI!
        // ========================================
        const firebaseConfig = {
    apiKey: "AIzaSyDAS6c3o0ozy87FYml06aA9ObTSFDZOoI4",
    authDomain: "candleversetest.firebaseapp.com",
    projectId: "candleversetest",
    storageBucket: "candleversetest.firebasestorage.app",
    messagingSenderId: "919330781977",
    appId: "1:919330781977:web:01d25dacc11a2b704fa388"
  };

        // Inicializar Firebase
        let app, db;
        try {
            app = initializeApp(firebaseConfig);
            db = getFirestore(app);
            document.getElementById('firebaseWarning').style.display = 'none';
            console.log('‚úÖ Firebase inicializado com sucesso');
        } catch (error) {
            console.error('‚ùå Erro ao inicializar Firebase:', error);
        }

        // Tornar db global para as fun√ß√µes
        window.db = db;
        window.addDoc = addDoc;
        window.collection = collection;
